{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=.;Database=TMS;Trusted_Connection=True;Encrypt=false;TrustServerCertificate=true;",
  },
  "JWT": {
    "ValidAudience": "http://localhost:7152",
    "ValidIssuer": "http://localhost:7152",
    "Secret": "ByYM000OLlMQG6VVVp1OH7Xzyr7gHuw1qvUC5dcGt3SNM",
    "DurationInMinutes": 1440, // 1 day
    "RefreshTokenExpiration": 2 // 2 days
  },
  "HangfireSettings": {
    "Route": "/job",
    "Credentials": {
      "User": "admin",
      "Password": "admin"
    },
    "Dashboard": {
      "AppPath": "/swagger",
      "DashboardTitle": "Jobs"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs\\log-.log",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ]
  }
}
